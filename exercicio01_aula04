valorPrestacao = float(input('Digite o valor da prestação em atraso: '))
multa = float(input('Digite a porcentagem de multa pelo atraso: '))
qtdeDias = int(input('Digite a quantidade de dias de atraso: '))

prestacaoAtualizada = valorPrestacao + (valorPrestacao * (multa / 100) * qtdeDias)

print('O valor da prestação atualizado é: ', prestacaoAtualizada)